var app = angular.module('fritter', ['ngRoute', 'ui.bootstrap', 'wu.masonry','infinite-scroll']);

app.config(['$routeProvider',function($routeProvider){
  $routeProvider
  .when('/',          {templateUrl: "<%= asset_path('home.html') %>",     controller: 'HomeCtrl'})
  .when('/user/',     {templateUrl: "<%= asset_path('user.html') %>",     controller: 'UserCtrl'})
  .when('/pins/:id',  {templateUrl: "<%= asset_path('pin.html') %>", controller: 'PinCtrl'})
  .when('/categories/:category', {templateUrl: "<%= asset_path('home.html') %>", controller: 'HomeCtrl'})
  .when('/user/user-account/', {templateUrl: "<%= asset_path('user-account.html')%>", controller: 'HeaderCtrl'})
  .otherwise({redirectTo: '/'})
  // .when('/user/user-account/', {templateUrl: "<%= asset_path('user-account.html')%>", controller: 'UserAccCtrl'})

}]);
