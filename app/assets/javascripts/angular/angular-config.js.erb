var app = angular.module('fritter', ['ngRoute']);

app.config(['$routeProvider',function($routeProvider){
  $routeProvider

.when('/', {templateUrl: "<%= asset_path('pin-index.html') %>", controller: 'HomeCtrl'})
.when('/pins/:id', {templateUrl: "<%= asset_path('pin-show.html') %>", controller: 'PinCtrl'})
.when('/header/', {templateUrl: "<%= asset_path('header.html') %>", controller: 'HeaderCtrl'})
.when('/user/', {templateUrl: "<%= asset_path('user-show.html') %>", controller: 'UserCtrl'})
.when('/users/sign_up', {templateUrl: "<%= asset_path('user-signup.html') %>", controller: 'UserSignUpCtrl'})
.when('/users/sign_in', {templateUrl: "<%= asset_path('user-signin.html') %>", controller: 'UserSignInCtrl'})

}]);
